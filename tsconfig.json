{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",				// 웹 브라우저 환경이라면 "amd" 사용
    "moduleResolution": "node",	// module이 amd라면 "classic" 사용
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "sourceMap": true,
    "outDir": "dist",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*"]
}